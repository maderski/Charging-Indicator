<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="maderski.chargingindicator.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/chargingbolt2"
        android:layout_above="@+id/play_sound_switch"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Change ICON when charging is done"
        android:id="@+id/change_icon_switch"
        android:checked="false"
        android:textStyle="bold"
        android:onClick="ChangeIconSwitch"
        android:textColor="#666565"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="VIBRATE when power is connected"
        android:id="@+id/vibrate_switch"
        android:checked="false"
        android:textStyle="bold"
        android:onClick="VibrateSwitch"
        android:textColor="#666565"
        android:paddingBottom="20dp"
        android:layout_above="@+id/show_toast_switch"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Play SOUND when power is connected"
        android:id="@+id/play_sound_switch"
        android:checked="false"
        android:textStyle="bold"
        android:onClick="PlaySoundSwitch"
        android:textColor="#666565"
        android:paddingBottom="20dp"
        android:layout_above="@+id/vibrate_switch"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MESSAGE pop up on connect/disconnect"
        android:id="@+id/show_toast_switch"
        android:checked="false"
        android:textStyle="bold"
        android:onClick="ShowToastSwitch"
        android:textColor="#666565"
        android:paddingBottom="20dp"
        android:layout_above="@+id/change_icon_switch"
        android:layout_alignParentStart="true" />


</RelativeLayout>
